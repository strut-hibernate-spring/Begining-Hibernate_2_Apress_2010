<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.pool_size">0</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:file:/tmp/ToolsExample/db/toolsdb;shutdown=true</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.show_sql">false</property>
        <mapping class="com.hibernatebook.generated.NotepadNote" />
        <mapping class="com.hibernatebook.generated.Note" />
        <mapping class="com.hibernatebook.generated.Notepad" />
    </session-factory>
</hibernate-configuration>
